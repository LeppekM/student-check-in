<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="loginScene" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
   <children>
       <ImageView fx:id="msoeBackgroundImage" fitHeight="450.0" fitWidth="600.0" opacity="0.25" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER">
          <Label text="MSOE Technical Support Center" style="-fx-font-weight: bold" underline="true">
              <font>
                  <Font size="36.0" />
              </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
          </Label>
          <Label text="Login" style="-fx-font-weight: bold">
              <font>
                  <Font size="24.0" />
              </font>
            <VBox.margin>
               <Insets bottom="10.0" top="25.0" />
            </VBox.margin>
          </Label>
          <HBox alignment="CENTER">
              <Label text="username:" style="-fx-font-weight: bold">
                  <font>
                      <Font size="12.0" />
                  </font>
               <padding>
                  <Insets right="5.0" />
               </padding>
              </Label>
              <TextField fx:id="usernameInputLoginPage" />
            <padding>
               <Insets bottom="10.0" />
            </padding>
          </HBox>
          <HBox alignment="CENTER">
              <Label text="password:" style="-fx-font-weight: bold">
                  <font>
                      <Font size="12.0" />
                  </font>
               <padding>
                  <Insets right="5.0" />
               </padding>
              </Label>
              <TextField fx:id="passwordInputLoginPage" />
            <padding>
               <Insets bottom="10.0" />
            </padding>
          </HBox>
          <Button fx:id="loginButtonLoginPage" onAction="#login" text="Login" />
      </VBox>
   </children>
</StackPane>
