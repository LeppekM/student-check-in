<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="scene" prefHeight="300.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AddWorkerController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox>
                    <children>
                        <HBox>
                            <children>
                                <Label contentDisplay="CENTER" text="Name:">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="nameInputAddWorkerPage" />
                            </children>
                            <opaqueInsets>
                                <Insets bottom="15.0" />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox>
                            <children>
                                <Label text="Email:">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="emailInputAddWorkerPage" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox>
                            <children>
                                <Label text="Password:">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="passwordInputAddWorkerPage" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Label text="Administrator:" />
                                <CheckBox fx:id="isAdminCheckBoxAddWorkerPage" mnemonicParsing="false">
                                   <padding>
                                      <Insets left="5.0" />
                                   </padding></CheckBox>
                             </children>
                              <VBox.margin>
                                  <Insets bottom="15.0" />
                              </VBox.margin>
                          </HBox>
                        <HBox>
                            <children>
                                <Label text="Admin Pin:">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="adminPinInputAddWorkerPage" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
                <Button fx:id="addButtonAddWorkerPage" alignment="CENTER" mnemonicParsing="false" onAction="#addWorker" text="Add" />
            </children>
        </HBox>
        <Button fx:id="cancelButtonAddWorkerPage" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
    </children>
    <VBox.margin>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </VBox.margin>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
