<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainMenuScene" onKeyTyped="#openCheckoutFromScanner" prefHeight="620.0" prefWidth="800.0"
      stylesheets="@../css/MenuStyle.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="InventoryController.ControllerMenu">
  <StackPane fx:id="pane" VBox.vgrow="ALWAYS">
    <VBox alignment="CENTER">
      <HBox alignment="CENTER">
        <stylesheets>
          <URL value="@../css/MenuStyle.css"/>
        </stylesheets>
        <VBox>
          <padding>
            <Insets right="75.0"/>
          </padding>
          <JFXButton fx:id="inventory" mnemonicParsing="false" prefHeight="150.0" prefWidth="225.0"
                     style="-fx-font-size: 28" stylesheets="@../css/ButtonStyle.css" text="Inventory">
            <VBox.margin>
              <Insets bottom="50.0"/>
            </VBox.margin>
          </JFXButton>
          <JFXButton fx:id="inventory1" mnemonicParsing="false" onAction="#openCheckItemsPage"
                     prefHeight="150.0" prefWidth="225.0" style="-fx-font-size: 28"
                     stylesheets="@../css/ButtonStyle.css" text="Checkout/In">
            <VBox.margin>
              <Insets top="25.0"/>
            </VBox.margin>
          </JFXButton>
        </VBox>
        <VBox>
          <padding>
            <Insets right="50.0"/>
          </padding>
          <JFXButton fx:id="manageStudents" mnemonicParsing="false" prefHeight="150.0" prefWidth="225.0"
                     style="-fx-font-size: 28" stylesheets="@../css/ButtonStyle.css" text="Button"
                     textAlignment="CENTER">
          <VBox.margin>
            <Insets bottom="50.0"/>
          </VBox.margin>
        </JFXButton>
          <JFXButton fx:id="manageWorkers" mnemonicParsing="false" prefHeight="150.0" prefWidth="225.0"
                     style="-fx-font-size: 28" stylesheets="@../css/ButtonStyle.css" textAlignment="CENTER">
            <VBox.margin>
              <Insets top="25.0"/>
            </VBox.margin>
          </JFXButton>
        </VBox>
      </HBox>
    </VBox>
    <JFXButton fx:id="logout" mnemonicParsing="false" onMouseClicked="#logout" stylesheets="@../css/ButtonStyle.css"
               StackPane.alignment="TOP_RIGHT">
      <graphic>
        <ImageView fitHeight="35.0" fitWidth="39.0">
          <Image url="@../images/logout.png"/>
        </ImageView>
      </graphic>
      <StackPane.margin>
        <Insets right="20.0" top="20.0"/>
      </StackPane.margin>
    </JFXButton>
  </StackPane>
</VBox>
