<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainMenuScene" onKeyTyped="#openCheckoutFromScanner" prefHeight="620.0" prefWidth="800.0" stylesheets="@../css/MenuStyle.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InventoryController.ControllerMenu">
  <children>
    <StackPane fx:id="pane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <ImageView fx:id="msoeBackgroundImage" fitHeight="620.0" fitWidth="800.0" opacity="0.50" pickOnBounds="true" preserveRatio="true" />
        <VBox alignment="CENTER">
          <children>
            <HBox alignment="CENTER">
              <children>
                <VBox>
                  <children>
                    <Button fx:id="inventory" mnemonicParsing="false" prefHeight="75.0" prefWidth="155.0" text="Inventory">
                                 <VBox.margin>
                                    <Insets bottom="25.0" />
                                 </VBox.margin></Button>
                    <Button fx:id="inventory1" mnemonicParsing="false" onAction="#openCheckItemsPage" prefHeight="75.0" prefWidth="155.0" text="Checkout/In">
                                 <VBox.margin>
                                    <Insets top="25.0" />
                                 </VBox.margin></Button>
                  </children>
                  <padding>
                    <Insets right="50.0" />
                  </padding>
                </VBox>
                <VBox>
                  <children>
                    <Button fx:id="manageStudents" mnemonicParsing="false" prefHeight="75.0" prefWidth="155.0" >
                      <VBox.margin>
                        <Insets bottom="25.0" />
                      </VBox.margin>
                    </Button>

                  </children>
                  <padding>
                    <Insets right="50.0" />
                  </padding>
                </VBox>
              </children>
              <stylesheets>
                <URL value="@../css/MenuStyle.css" />
              </stylesheets>
            </HBox>
          </children>
        </VBox>
      </children>
    </StackPane>
  </children>
</VBox>
