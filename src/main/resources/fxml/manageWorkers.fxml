<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="manageWorkersScene" alignment="CENTER" prefHeight="800.0" prefWidth="1150.0"
      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ManagePeople.ControllerManageWorkers">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <Label text="Manage Workers" HBox.hgrow="ALWAYS">
            <stylesheets>
                <URL value="@../css/HeaderStyle.css"/>
            </stylesheets>
        </Label>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <JFXTextField fx:id="searchInput" focusColor="FIREBRICK" prefHeight="50.0" promptText="search">
                <font>
                    <Font size="18.0"/>
                </font>
            </JFXTextField>
        </HBox>
    </HBox>
    <JFXTreeTableView fx:id="manageWorkersTable" prefHeight="480.0" stylesheets="@../css/TableStyle.css"
                      VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
        <Button fx:id="back" mnemonicParsing="false" onAction="#goBack" stylesheets="@../css/CheckButton.css"
                HBox.hgrow="ALWAYS">
            <graphic>
                <ImageView fitHeight="35.0" fitWidth="39.0">
                    <Image url="@../images/home.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
        <Button fx:id="addAdmin" mnemonicParsing="false" onAction="#addAdmin" prefHeight="35.0"
                prefWidth="160.0" stylesheets="@../css/CheckButton.css" text="Add Admin" textAlignment="CENTER">
            <HBox.margin>
                <Insets right="20.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="addWorker" mnemonicParsing="false" onAction="#addWorker" prefHeight="35.0"
                prefWidth="160.0" stylesheets="@../css/CheckButton.css" text="Add Worker"
                textAlignment="CENTER">
            <HBox.margin>
                <Insets right="20.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="deleteWorker" mnemonicParsing="false" onAction="#deleteWorker" prefHeight="35.0"
                prefWidth="160.0" stylesheets="@../css/CheckButton.css" text="Delete " textAlignment="CENTER"/>
            <HBox.margin>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </HBox>
    </HBox>
</VBox>
