<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="manageWorkersScene" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManagePeople.ControllerManageWorkers">
    <Label layoutX="20.0" layoutY="14.0" text="Manage Workers">
        <stylesheets>
            <URL value="@../css/HeaderStyle.css" />
        </stylesheets>
    </Label>
    <JFXTreeTableView fx:id="manageWorkersTable" onMouseClicked="#edit" layoutX="0.0" layoutY="66.0" prefHeight="480.0" stylesheets="@../css/TableStyle.css" />
    <JFXTextField fx:id="searchInput" layoutX="627.0" layoutY="25.0" promptText="search" />
    <Button fx:id="back" layoutX="10.0" layoutY="554.0" mnemonicParsing="false" onAction="#goBack">
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="39.0">
                <image>
                    <Image url="@../images/home.png" />
                </image>
            </ImageView>
        </graphic>
        <stylesheets>
            <URL value="@../css/ButtonStyle.css" />
        </stylesheets>
    </Button>
    <Button fx:id="addWorker" layoutX="448.0" layoutY="554.0" mnemonicParsing="false" onAction="#addWorker" prefHeight="35.0" prefWidth="160.0" text="Add Worker" textAlignment="CENTER">
        <stylesheets>
            <URL value="@../css/ButtonStyle.css" />
        </stylesheets>
    </Button>
   <Button fx:id="addAdmin" layoutX="267.0" layoutY="554.0" mnemonicParsing="false" onAction="#addAdmin" prefHeight="35.0" prefWidth="160.0" text="Add Admin" textAlignment="CENTER">
      <stylesheets>
         <URL value="@../css/ButtonStyle.css" />
      </stylesheets>
   </Button>
   <Button fx:id="deleteWorker" layoutX="627.0" layoutY="554.0" mnemonicParsing="false" onAction="#deleteWorker" prefHeight="35.0" prefWidth="160.0" text="Delete " textAlignment="CENTER">
      <stylesheets>
         <URL value="@../css/ButtonStyle.css" />
      </stylesheets>
   </Button>
</AnchorPane>
